{
  "name": "hono-openapi-middlewares",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "version": "1.1.1",
  "main": "hono-openapi-middlewares.cjs",
  "module": "hono-openapi-middlewares.mjs",
  "types": "hono-openapi-middlewares.d.ts",
  "exports": {
    ".": {
      "types": "./hono-openapi-middlewares.d.ts",
      "require": "./hono-openapi-middlewares.cjs",
      "import": "./hono-openapi-middlewares.mjs"
    }
  },
  "description": "A set of middlewares for using Hono with zod-openapi, including JWT authentication/authorization and automatic security scheme registration",
  "scripts": {
    "dev": "vite",
    "test": "vitest --run",
    "build": "rimraf build/**/* && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts && copyfiles package.json build && copyfiles README.md build",
    "publish:manual": "npm run build && cd build && npm publish --ignore-scripts",
    "type-check": "tsc",
    "lint": "eslint src",
    "format": "prettier . --write",
    "format:ci-cd": "prettier --check '**/*.{ts,css,json}'",
    "prepare": "husky"
  },
  "files": [
    "hono-openapi-middlewares.cjs",
    "hono-openapi-middlewares.mjs",
    "hono-openapi-middlewares.d.ts",
    "README.md"
  ],
  "keywords": [
    "hono",
    "openapi",
    "zod",
    "middleware",
    "authentication",
    "jwt",
    "oauth2",
    "authorization"
  ],
  "author": "Markus Ahlstrand",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/markusahlstrand/hono-openapi-middlewares.git"
  },
  "bugs": {
    "url": "https://github.com/markusahlstrand/hono-openapi-middlewares/issues"
  },
  "homepage": "https://github.com/markusahlstrand/hono-openapi-middlewares#readme",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npm run build"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "build",
          "npmPublish": true,
          "tarballDir": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@hono/zod-openapi": "^0.19.10",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-compat": "^6.0.2",
    "hono": "^4.9.9",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "@hono/zod-openapi": "^0.19.10",
    "hono": "^4.9.0",
    "zod": "^3.25.76"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
